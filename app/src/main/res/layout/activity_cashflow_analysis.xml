<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".CashflowAnalysis">

    <TextView
        android:id="@+id/tvHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Track Your Cashflow"
        android:textColor="@color/text_color"
        android:textSize="@dimen/_20sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/_18sdp"
        android:paddingStart="@dimen/_20sdp"
        />
<HorizontalScrollView
    android:id="@+id/layoutButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/tvHead"
    android:layout_marginTop="5dp"
    android:layout_marginEnd="20dp"
    android:scrollbars="none"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:weightSum="3"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnToday"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_rectangle_line"
            android:layout_marginBottom="5dp"
            android:text="Today"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="13sp" />
        <Button
            android:id="@+id/btnWeek"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_greyed_out"
            android:layout_marginBottom="5dp"
            android:text="Past 1 Week"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="13sp" />
        <Button
            android:id="@+id/btnMonth"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_greyed_out"
            android:layout_marginBottom="5dp"
            android:text="Past 1 Month"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="13sp" />
        <Button
            android:id="@+id/btnQuarter"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/button_greyed_out"
            android:layout_marginBottom="5dp"
            android:text="Past 1 Quarter"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:layout_weight="1"
            android:textSize="13sp" />

    </LinearLayout>
</HorizontalScrollView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutButton"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:id="@+id/myGoalCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            app:cardBackgroundColor="@color/background_card"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18">

                <TextView
                    android:id="@+id/tvMyGoals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Budget"
                    android:textColor="@color/grey"
                    android:layout_margin="10dp"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutGoalCharts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvMyGoals">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_10sdp"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="KES"
                                android:textColor="@color/primary_orange"
                                android:textSize="16sp"
                                android:textStyle="bold" />


                            <TextView
                                android:id="@+id/tvOutflowBudget"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/primary_orange"
                                android:textSize="16sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.cardview.widget.CardView>

        <!--                        </androidx.constraintlayout.widget.ConstraintLayout>-->

        <androidx.cardview.widget.CardView
            android:id="@+id/myBudgetCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.18"
            app:cardBackgroundColor="@color/background_card"
            app:cardCornerRadius="15dp"
            app:cardElevation="8dp"
            app:cardMaxElevation="8dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.18">


                <TextView
                    android:id="@+id/tvMyActuals"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="My Actuals"
                    android:textColor="@color/grey"
                    android:layout_margin="@dimen/_10sdp"
                    android:textSize="17sp"
                    android:textStyle="bold"   />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tvMyActuals"
                    >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/_10sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KES"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvOutflowActual"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@color/red"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <!--                            <TextView-->
            <!--                                android:id="@+id/tvMyBudget"-->
            <!--                                android:layout_width="match_parent"-->
            <!--                                android:layout_height="wrap_content"-->
            <!--                                android:layout_marginTop="8dp"-->
            <!--                                android:gravity="center_horizontal"-->
            <!--                                android:text="My Budget"-->
            <!--                                android:textStyle="bold" />-->


        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/idBarChartCashflow"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@id/btnSave"
        android:padding="20dp" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/button_rectangle_line"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="@dimen/_8sdp"
        android:text="Tap to manage your numbers"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:textSize="17sp" />

</androidx.constraintlayout.widget.ConstraintLayout>