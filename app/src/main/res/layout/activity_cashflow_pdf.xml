<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CashflowPdfActivity"
    android:fitsSystemWindows="true"
    android:paddingBottom="@dimen/_5sdp"
    android:paddingLeft="@dimen/_14sdp"
    android:paddingRight="@dimen/_14sdp"
    android:paddingTop="@dimen/_10sdp"
    android:background="@color/background_card">


    <!--        <Button-->
    <!--            android:id="@+id/button2"-->
    <!--            android:layout_width="wrap_content"-->
    <!--            android:layout_height="wrap_content"-->
    <!--            android:layout_alignParentLeft="true"-->
    <!--            android:layout_alignParentRight="true"-->
    <!--            android:layout_toRightOf="@+id/button1"-->
    <!--            android:text="view" />-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:visibility="gone"
        android:id="@+id/floating_action_button_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_green"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:elevation="51dp"
        android:contentDescription="Download"
        android:text="Download PDF"
        app:srcCompat="@drawable/ic_download"
        app:tint="@color/white"
        />
    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:backgroundTint="@color/primary_green"
        android:indeterminateTint="@color/primary_orange"
        android:layout_marginTop="2dp"/>
    <LinearLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
    <com.github.barteksc.pdfviewer.PDFView
        android:id="@+id/pdfview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp">
    </com.github.barteksc.pdfviewer.PDFView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom|center"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        >
        <Button

            android:id="@+id/btnNext"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="5dp"
            android:text="Next"
            android:background="@drawable/button_rectangle_line"
            android:padding="3dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_12ssp"
            />

        <TextView
            android:id="@+id/btnClose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_close"
            android:padding="3dp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:textColor="@color/grey"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:textSize="@dimen/_13ssp"
            />
    </LinearLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>