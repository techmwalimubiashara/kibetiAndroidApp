                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginEnd="@dimen/_4sdp"
                android:layout_marginLeft="@dimen/_16sdp"
                app:cardBackgroundColor="@color/background_card"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingTop="@dimen/_3sdp"
                    android:paddingEnd="@dimen/_16sdp"
                    android:paddingRight="@dimen/_16sdp"
                    android:paddingBottom="@dimen/_5sdp">


                    <TextView
                        android:id="@+id/nameTv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Amount not allocated"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/currentTv"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                    <TextView
                        android:id="@+id/currentTv"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="@dimen/_8sdp"
                        android:text="Amount:"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintStart_toEndOf="@+id/nameTv"
                        app:layout_constraintBottom_toBottomOf="@+id/nameTv"
                        app:layout_constraintTop_toTopOf="@+id/nameTv"
                        app:layout_constraintEnd_toStartOf="@+id/statusTv"
                        />
                    <TextView
                        android:id="@+id/statusTv"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Ksh. 0.00"
                        android:textColor="@color/primary_green"
                        android:textSize="@dimen/_10ssp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/currentTv"
                        app:layout_constraintStart_toEndOf="@+id/currentTv"
                        app:layout_constraintTop_toTopOf="@+id/currentTv"
                        />

                    <!--            -->
