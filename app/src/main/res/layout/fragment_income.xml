<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".IncomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_expired"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                android:background="@color/background">



                <androidx.cardview.widget.CardView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/offer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:cardElevation="10dp"
                    app:layout_constraintBottom_toTopOf="@id/image_response"
                    android:layout_marginTop="20dp"
                    app:cardBackgroundColor="@color/red_dull"
                    app:cardCornerRadius="50dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_gravity="center">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Special"
                            android:textSize="16dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Offer!"
                            android:textSize="16dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"/>



                    </LinearLayout>



                </androidx.cardview.widget.CardView>



                <!-- Image -->
                <ImageView
                    android:id="@+id/image_response"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/plant2"
                    app:layout_constraintTop_toBottomOf="@+id/offer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="10dp"
                    android:contentDescription="Response image" />

                <!-- Heading Text -->


                <!-- Body Text -->
                <TextView
                    android:id="@+id/tv_body"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="✅ Track all your mpesa transactions automatically and take control of your spending.
"
                    android:textColor="@color/gray_dark"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/image_response"
                    app:layout_constraintBottom_toTopOf="@+id/tv_body2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/tv_body2"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="✅ Get a personalized report on the best investments and increase your streams of income."
                    android:textColor="@color/gray_dark"
                    android:gravity="center"
                    android:layout_marginTop="22dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_body"
                    app:layout_constraintBottom_toTopOf="@+id/tv_body3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <TextView
                    android:id="@+id/tv_body3"
                    android:layout_width="240dp"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text=" If you have a coupon code, please use it on the next screen and enjoy more discounts!"
                    android:textColor="@color/gray_dark"
                    android:gravity="center"
                    android:layout_marginTop="22dp"
                    app:layout_constraintTop_toBottomOf="@id/tv_body2"
                    app:layout_constraintBottom_toTopOf="@+id/btnMakePayment"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnMakePayment"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:textAllCaps="false"
                    android:text="Take me there"
                    android:textSize="@dimen/_13ssp"
                    android:layout_margin="10dp"
                    android:background="@drawable/button_rectangle_line"
                    android:textColor="@color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_body3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>


