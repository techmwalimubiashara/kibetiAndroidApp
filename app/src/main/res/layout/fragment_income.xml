                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_below="@id/scrollView"
                            android:layout_marginStart="20dp"
                            android:layout_marginEnd="20dp"
                            android:layout_marginBottom="20dp"
                            android:layout_marginTop="10dp"
                            android:text="I want to add budget inflow"
                            android:textSize="14sp"
                            android:textAllCaps="false"
                            android:background="@drawable/button_rectangle_line"
                            android:textColor="@color/white"
                            android:onClick="addInflow"
                            />

                    </LinearLayout>

                    <ListView
                        android:id="@+id/alllistview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/hidden_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>

                    <ListView
                        android:id="@+id/todaylistview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:visibility="gone" />


                    <!-- The following is the expandable portion whose visibility is initially set to 'gone'
