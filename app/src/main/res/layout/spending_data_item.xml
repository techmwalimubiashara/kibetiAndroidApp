<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_4sdp"
        android:layout_marginEnd="@dimen/_4sdp"
        android:layout_marginLeft="@dimen/_16sdp"
        app:cardBackgroundColor="@color/background_card"
        app:cardCornerRadius="@dimen/_6sdp"
        app:cardElevation="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_10sdp"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingTop="@dimen/_3sdp"
            android:paddingEnd="@dimen/_16sdp"
            android:paddingRight="@dimen/_16sdp"
            android:paddingBottom="@dimen/_5sdp">

            <TextView
                android:id="@+id/act_label"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Last Updated:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toEndOf="@+id/nameTv"
                app:layout_constraintTop_toBottomOf="@+id/nameTv"
                app:layout_constraintEnd_toStartOf="@+id/lastUpTv"
                />
            <TextView
                android:id="@+id/lastUpTv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="01-01-2010"
                android:textColor="@color/primary_orange"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/act_label"
                app:layout_constraintStart_toEndOf="@+id/act_label"
                app:layout_constraintTop_toTopOf="@+id/act_label"
                />
            <TextView
                android:id="@+id/varianceTv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Frequency:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toEndOf="@+id/act_label"
                app:layout_constraintTop_toBottomOf="@+id/act_label"
                app:layout_constraintEnd_toStartOf="@+id/act_label"
                />
            <TextView
                android:id="@+id/ageTv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Daily"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/varianceTv"
                app:layout_constraintStart_toEndOf="@+id/varianceTv"
                app:layout_constraintTop_toTopOf="@+id/varianceTv"
                />
            <TextView
                android:id="@+id/nameTv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="This Account Card"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_11ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/currentTv"
                app:layout_constraintTop_toTopOf="parent"
                />

            <TextView
                android:id="@+id/currentTv"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="@dimen/_8sdp"
                android:text="Curent Weekly:"
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toEndOf="@+id/nameTv"
                app:layout_constraintBottom_toBottomOf="@+id/nameTv"
                app:layout_constraintTop_toTopOf="@+id/nameTv"
                app:layout_constraintEnd_toStartOf="@+id/statusTv"
                />
            <TextView
                android:id="@+id/statusTv"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="Updated"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/currentTv"
                app:layout_constraintStart_toEndOf="@+id/currentTv"
                app:layout_constraintTop_toTopOf="@+id/currentTv"
                />

<!--            -->
<!--            <TextView-->
<!--                android:id="@+id/statusTv"-->
<!--                android:layout_width="80dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="Updated"-->
<!--                android:textColor="@color/primary_green"-->
<!--                android:textSize="@dimen/_9ssp"-->
<!--                app:layout_constraintBottom_toBottomOf="@+id/nameTv"-->
<!--                app:layout_constraintStart_toEndOf="@+id/nameTv"-->
<!--                app:layout_constraintTop_toTopOf="@+id/nameTv"-->
<!--                />-->

            <TextView
                android:id="@+id/cat_label"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Budget: "
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/nameTv"
                />
            <TextView
                android:id="@+id/cat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 100000.00"
                android:textColor="@color/primary_green"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@+id/cat_label"
                app:layout_constraintStart_toEndOf="@+id/cat_label"
                app:layout_constraintTop_toTopOf="@+id/cat_label"
                />
            <TextView
                android:id="@+id/actLbl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Actual: "
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cat_label"
                />

            <TextView
                android:id="@+id/genderTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0.0"
                android:textColor="@color/primary_orange"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@+id/actLbl"
                app:layout_constraintStart_toEndOf="@+id/actLbl"
                app:layout_constraintTop_toTopOf="@+id/actLbl"
                />

            <TextView
                android:id="@+id/varLbl"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:text="Variance: "
                android:textColor="@color/text_color"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/actLbl"
                />

            <TextView
                android:id="@+id/varAmtTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 0.0"
                android:textColor="@color/primary_orange"
                android:textSize="@dimen/_10ssp"
                app:layout_constraintBottom_toBottomOf="@+id/varLbl"
                app:layout_constraintStart_toEndOf="@+id/varLbl"
                app:layout_constraintTop_toTopOf="@+id/varLbl"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
