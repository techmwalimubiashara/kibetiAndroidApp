<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp">

    <!-- WhatsApp Icon (Top Center) -->
    <ImageView
        android:id="@+id/whatsappIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/ic_whatsapp_green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/titleText"
        android:contentDescription="whatsapp icon"
        android:layout_marginTop="32dp"/>

    <!-- Title Text -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Join Our WhatsApp Community"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/whatsappIcon"
        android:layout_marginTop="24dp"/>

    <!-- Subtitle Text -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Get exclusive tips, offers and financial advice"
        android:textAlignment="center"
        android:textColor="@color/text_color"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        android:layout_marginTop="16dp"/>

    <!-- Join Button (Centered) -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnJoinWhatsapp"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="Join WhatsApp Group"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:icon="@drawable/ic_whatsapp"
        app:iconGravity="start"
        app:iconTint="@color/white"
        app:iconPadding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitleText"
        app:layout_constraintBottom_toTopOf="@id/btnSkip"
        android:layout_marginTop="32dp"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_marginHorizontal="32dp"/>

    <!-- Skip Button (Bottom) -->
    <Button
        android:id="@+id/btnSkip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remind Me Later"
        android:textColor="@color/primary_orange"
        android:background="@android:color/transparent"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="24dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>