<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".LumpsumActivity"
    android:background="@color/background">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_orange"
        android:layout_gravity="bottom|right"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="80dp"
        app:elevation="51dp"
        android:contentDescription="Add Inflow"
        android:text="Add Inflow"
        app:srcCompat="@drawable/ic_plus_24"
        app:tint="@color/white"
        />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button_download"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary_orange"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        app:elevation="51dp"
        android:contentDescription="Add Inflow"
        android:text="Add Inflow"
        app:srcCompat="@drawable/ic_pdf"
        app:tint="@color/white"
        />
    <ProgressBar
        android:id="@+id/progressbar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:backgroundTint="@color/primary_green"
        android:indeterminateTint="@color/primary_orange"
        android:layout_marginTop="3dp"/>
    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="7dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"/>
    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/cabinet" />
        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Lumpsum Found"
            android:textColor="@color/grey"
            android:textSize="@dimen/_14ssp"
            android:textAlignment="center"
            />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>