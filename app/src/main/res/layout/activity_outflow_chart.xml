<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OutflowChart">

    <TextView
        android:id="@+id/chartTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:text="Your Outflow Chart"
        android:textColor="@color/text_color"
        android:textSize="16dp"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/idBarChart"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_below="@+id/chartTitle"
        android:visibility="gone" />

    <com.github.mikephil.charting.charts.PieChart

        android:id="@+id/idPieChart"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/idBarChart"
        android:layout_margin="20dp"
        android:padding="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"

        android:gravity="bottom|center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <Button
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_margin="10dp"
            android:background="@drawable/button_rectangle_line"
            android:onClick="share"
            android:padding="0dp"
            android:text="I recommend this to my friends and family"
            android:textAllCaps="false"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="@string/str_back"
            android:onClick="backOutflow"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:textSize="21sp"
            android:textStyle="bold"/>

<!--        <Button-->
<!--            android:layout_width="150dp"-->
<!--            android:layout_height="35dp"-->
<!--            android:layout_margin="10dp"-->
<!--            android:background="@color/primary_green"-->
<!--            android:onClick="addOutflow"-->
<!--            android:padding="0dp"-->
<!--            android:text="Add Outflows"-->
<!--            android:textAllCaps="false"-->
<!--            android:textSize="15dp" />-->
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutothers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        android:layout_below="@+id/idPieChart"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.18">

                <ImageView
                    android:id="@+id/imBudget"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/budget" />


                <TextView
                    android:id="@+id/budgetTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Budget"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/imBudget"
                    app:layout_constraintStart_toStartOf="@+id/imBudget"
                    app:layout_constraintTop_toBottomOf="@+id/imBudget" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.18">

                <ImageView
                    android:id="@+id/investImg"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/investment" />


                <TextView
                    android:id="@+id/investTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Investment"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/investImg"
                    app:layout_constraintStart_toStartOf="@+id/investImg"
                    app:layout_constraintTop_toBottomOf="@+id/investImg" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.18">

                <ImageView
                    android:id="@+id/imShopping"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/cart" />


                <TextView
                    android:id="@+id/shoppingTV"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Shop Bila Stress"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/imShopping"
                    app:layout_constraintStart_toStartOf="@+id/imShopping"
                    app:layout_constraintTop_toBottomOf="@+id/imShopping" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.18">

                <ImageView
                    android:id="@+id/imTracker"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_location_tracker" />


                <TextView
                    android:id="@+id/trackerTV"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Budget Tracker"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/imTracker"
                    app:layout_constraintStart_toStartOf="@+id/imTracker"
                    app:layout_constraintTop_toBottomOf="@+id/imTracker" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"

            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.18">

                <ImageView
                    android:id="@+id/view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/goal" />


                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="My Goal"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="11sp"
                    app:layout_constraintEnd_toEndOf="@+id/view"
                    app:layout_constraintStart_toStartOf="@+id/view"
                    app:layout_constraintTop_toBottomOf="@+id/view" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.18">

                <ImageView
                    android:id="@+id/view1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/give_money" />


                <TextView
                    android:id="@+id/textView91"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Lumpsum"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/view1"
                    app:layout_constraintStart_toStartOf="@+id/view1"
                    app:layout_constraintTop_toBottomOf="@+id/view1" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.18">

                <ImageView
                    android:id="@+id/view2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/invest" />

                <TextView
                    android:id="@+id/textView92"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Should I invest?"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/view2"
                    app:layout_constraintStart_toStartOf="@+id/view2"
                    app:layout_constraintTop_toBottomOf="@+id/view2" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.18"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/view3"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/spending" />


                <TextView
                    android:id="@+id/textView93"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="My Analysis"
                    android:textAlignment="center"
                    android:textColor="@color/text_color"
                    android:textSize="10sp"
                    app:layout_constraintEnd_toEndOf="@+id/view3"
                    app:layout_constraintStart_toStartOf="@+id/view3"
                    app:layout_constraintTop_toBottomOf="@+id/view3" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

