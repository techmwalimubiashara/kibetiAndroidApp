<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".ExpiredActivty">
    <LinearLayout
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:orientation="vertical"
        >
        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:indeterminate="true"
            android:max="100"
            android:visibility="gone"
            android:backgroundTint="@color/primary_green"
            android:indeterminateTint="@color/primary_orange"
            android:layout_marginTop="7dp"/>
        <TextView
            android:id="@+id/tvHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text=""
            android:textColor="@color/primary_orange"
            android:textSize="@dimen/_16ssp"
            />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:srcCompat="@drawable/time_up"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:textAlignment="center"
            android:text="Your trial version for premium account has expired, please upgrade your account to continue enjoying for life "
            android:textColor="@color/text_color"
            android:textSize="@dimen/_13ssp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:text='Tap \"View Payment Plan\" to choose your plan'
            android:textColor="@color/grey"
            android:textSize="@dimen/_12ssp"
            />

        <Button
            android:id="@+id/makePaymentBtn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_margin="30dp"
            android:layout_gravity="center"
            android:text="View Payment Plan"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/button_rectangle_line"
            android:textColor="@color/white"
            />

        <TextView
            android:id="@+id/tvLogOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:text='Continue with Free Version'
            android:textColor="@color/primary_green"
            android:textSize="@dimen/_14ssp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textAlignment="center"
            android:text='For any feedback about accessing your account, please tap \"Feedback\" to reach to us'
            android:textColor="@color/grey"
            android:textSize="@dimen/_11ssp"
            />

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textAlignment="center"
        android:text="Feedback"
        android:textColor="@color/primary_orange"
        android:textSize="@dimen/_14ssp"
        android:textStyle="bold"
        android:layout_below="@+id/layout"
        />

</RelativeLayout>